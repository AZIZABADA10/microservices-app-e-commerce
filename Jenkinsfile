pipeline {
    agent any

    tools {
        nodejs 'Node18'  // Nom dans Jenkins Global Tool Configuration
    }

    environment {
        SONARQUBE_SERVER = 'SonarQube'  // Nom du serveur SonarQube configur√© dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/AZIZABADA10/microservices-app-e-commerce.git', branch: 'main'
            }
        }

        stage('Install & Build') {
            steps {
                script {
                    def services = ['auth-service', 'order-service', 'product-service', 'frontend']
                    services.each { svc ->
                        dir(svc) {
                            echo "üì¶ Installation des d√©pendances pour ${svc}"
                            sh 'npm install'

                            if (svc == 'frontend') {
                                echo "‚öôÔ∏è Build du frontend"
                                sh 'npm run build'
                            }
                        }
                    }
                }
            }
        }

        stage('Analyse SonarQube') {
            steps {
                echo "üîç Analyse SonarQube globale du projet"
                withSonarQubeEnv("${SONARQUBE_SERVER}") {
                    sh 'sonar-scanner'
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline r√©ussie !'
        }
        failure {
            echo '‚ùå La pipeline a √©chou√© !'
        }
    }
}
